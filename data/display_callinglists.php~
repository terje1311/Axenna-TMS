while($Row=MySQL_fetch_array($Result)) {


if($Row['salesRepID']!=0) {
	$disabled = "disabled";
	} else {
	$disabled = "";
			}

echo '<tr>
<td><input type="checkbox" '.$disabled.' name="makeLead" value="'.$Row['Orgnr'].'"></td>';

