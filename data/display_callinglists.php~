if($limitEnd=="undefined") { $limitEnd=500; }

if($limitStart <= 0) { $limitStart = 0; }
if($limitEnd < 500) { $limitEnd = 500; }

$query = "SELECT * FROM ".$callinglists." order by Firmanavn LIMIT ".$limitStart.",500";
if (!$Result= mysql_db_query($DBName, $query, $Link)) {
           print "No database connection <br>".mysql_error();
        }

echo '<input type="button" style="margin-right:3px;" value="<-" onclick="showAllLists(\''.($limitStart-500).'\',\''.($limitEnd-500).'\')" >';
echo $limitStart. " - ".$limitEnd;
echo '<input type="button" style="margin-left:3px;" value="->" onclick="showAllLists(\''.($limitStart+500).'\',\''.($limitEnd+500).'\')" >';

